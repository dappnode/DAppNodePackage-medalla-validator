{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "types": ["node"],
    "sourceMap": true,
    "outDir": "build"
  },
  "exclude": ["node_modules"]
}
